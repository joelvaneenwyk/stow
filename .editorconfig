# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{sh,bash,bats,conf,fish,profile}]
indent_style = space
indent_size = 4
binary_next_line = true
switch_case_indent = true
space_redirects = true
keep_padding = true
function_next_line = true
end_of_line = lf

[*.{yml,yaml}]
indent_style = space
indent_size = 2
