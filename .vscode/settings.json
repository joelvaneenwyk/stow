{
    "[shellscript]": {
        "editor.formatOnSave": true,
        "files.eol": "\n"
    },

    "shellcheck.enable": true,
    "shellcheck.enableQuickFix": true,
    "shellcheck.customArgs": ["-x"],
    "shellcheck.useWorkspaceRootAsCwd": true,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "bin/**/*.pm": true,
        "lib/**/*.pm": true,
        "_build/**": true,
        "_Inline/**": true,
        "blib/**": true
    },
    "files.associations": {
        "*.in": "perl",
        "stow": "perl",
        "chkstow": "perl",
        "get-version": "perl",
        "cpanfile": "perl"
    },

    "perl.enable": true,
    "perl.perlInc": [
        "${workspaceFolder}/lib",
        "${workspaceFolder}/bin",
        "${workspaceFolder}/t"
    ],

    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "args": ["-nologo"],
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "MSYS2": {
            "path": [
                "${env:USERPROFILE}\\scoop\\apps\\msys2\\current\\usr\\bin\\bash.exe"
            ],
            "args": [
                "--login", "-i"
            ],
            "env": {
                "MSYSTEM": "MINGW64",
                "CHERE_INVOKING": "1",
                "MSYS2_PATH_TYPE": "inherit"
            },
            "icon": "terminal-bash"
        },
        "Fish": {
            "path": [
                "${env:USERPROFILE}\\scoop\\apps\\msys2\\current\\usr\\bin\\fish.exe"
            ],
            "args": [
                "--login", "-i"
            ],
            "env": {
                "MSYSTEM": "MSYS2",
                "CHERE_INVOKING": "1",
                "MSYS2_PATH_TYPE": "inherit"
            },
            "icon": "terminal"
        },
        "Git Bash": {
            "source": "Git Bash",
            "icon": "terminal-bash"
        }
    },
