#!/usr/bin/perl

use strict;
use warnings;

use File::Basename;

my $dirname = dirname(__FILE__);

open(my $CONF, "<", "$dirname/../configure.ac")
  or die "Couldn't open configure.ac: $!\n";

while (my $line = <$CONF>) {
  if ($line =~ /^AC_INIT\(\[stow\], \[(.+?)\]/) {
    print "$1\n";
    exit 0;
  }
}

exit 1;
